@model IEnumerable<MVC_Personel.Models.Employee>

@{
    ViewData["Title"] = "Index";
}
<h1>Personel Listesi</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Yeni Personel</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Soyadı
            </th>
            <th>
                Adı
            </th>
            <th>
                Telefon
            </th>
            <th>
                Mail
            </th>
            <th>
                Departmanı
            </th>
            <th>
                Pozisyonu
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)@("@sirket.com.tr")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-secondary">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-primary">Detaylar</a>
                    @if (item.IsActive == true)
                    {
                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Çıkar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
