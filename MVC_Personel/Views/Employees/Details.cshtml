@model MVC_Personel.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Personel Detayı</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Soyadı
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            Adı
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            T.C. Kimlik Numarası
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdentityNumber)
        </dd>
        <dt class = "col-sm-2">
            Telefon Numarası
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            Cinsiyeti
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class = "col-sm-2">
            Mail Adresi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Username)@("@sirket.com.tr")
        </dd>
        <dt class = "col-sm-2">
            Adresi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            Sicil Numarası
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegistirationNumber)
        </dd>
        <dt class = "col-sm-2">
            İşe Giriş Tarihi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfStart)
        </dd>
        <dt class = "col-sm-2">
            Aktif
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class = "col-sm-2">
            İşten Ayrılma Tarihi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfLeave)
        </dd>
        <dt class = "col-sm-2">
            Departmanı
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Department.Name)
        </dd>
        <dt class = "col-sm-2">
            Pozisyonu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Position.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-secondary">Düzenle</a>
    <a asp-action="Index" class="btn btn-primary">Listeye Dön</a>
</div>
