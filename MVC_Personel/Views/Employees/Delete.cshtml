@model MVC_Personel.Models.Employee

@{
    ViewData["Title"] = "Delete";
}

<h3>Personeli işten çıkarmak üzeresiniz. Devam etmek istediğinize emin misiniz?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Soyadı
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
           Adı
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            T.C. Kimlik Numarası
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdentityNumber)
        </dd>
        <dt class = "col-sm-2">
            Kullanıcı Adı
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class = "col-sm-2">
            Sicil Numarası
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegistirationNumber)
        </dd>
        <dt class = "col-sm-2">
            İşe Giriş Tarihi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfStart)
        </dd>
        <dt class = "col-sm-2">
            Departmanı
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Department.Name)
        </dd class>
        <dt class = "col-sm-2">
            Pozisyonu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Position.Name)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Çıkar" class="btn btn-danger" /> |
        <a asp-action="Index"class="btn btn-success">Listeye Dön</a>
    </form>
</div>
